{{! template-lint-disable no-action no-passed-in-event-handlers }}
<WorkflowWrapper
  @submission={{this.submission}}
  @title={{this.publication.title}}
  @isProxySubmission={{this.submission.isProxySubmission}}
  @submissionEvents={{this.submissionEvents}}
  @loadTab={{this.loadTab}}
  @updateCovidSubmission={{this.updateCovidSubmission}}
>
  <WorkflowReview
    @submission={{this.submission}}
    @publication={{this.publication}}
    @comment={{this.comment}}
    @back={{this.loadPrevious}}
    @submitSubmission={{this.submit}}
    @uploading={{this.uploading}}
    @waitingMessage={{this.waitingMessage}}
    @abort={{this.abort}}
  />
</WorkflowWrapper>