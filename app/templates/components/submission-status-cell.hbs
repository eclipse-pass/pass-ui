
<div class="text-left">
  <span class="status {{status}} pr-1">
    {{#if (eq status "Complete")}}
      <span tooltip-position="left" tooltip="All target repositories have received a copy of the Submission and verified that it is approved for publication">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "Manuscript expected")}}
      <span tooltip-position="left" tooltip="Your funder is aware of this publication and is expecting the deposit of your manuscript.">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "Submitted")}}
      <span tooltip-position="left" tooltip="This submission has either been sent to all target repositories, or is in the queue and will be submitted shortly.">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "Stalled")}}
      <span tooltip-position="left" tooltip="There is a problem with your submission in one or more of the target repositories. Check the Submission page for more details">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "Failed")}}
      <span tooltip-position="left" tooltip="The system failed to receive the files for this submission. Please try again by starting a new submission">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "Edits required")}}
      <span tooltip-position="left" tooltip="The submitter has requested that you make some changes to the submission.">
        <i class="fas fa-info-circle"></i> {{status}}
      </span>
    {{/if}}
    {{#if (eq status "See details")}}
      {{#link-to "submissions.detail" record.id}}
        <i class="fas fa-circle"></i> {{status}}
      {{/link-to}}
    {{/if}}
  </span>
</div>
