<style>
  .fas {
    font-size: 0.8em;
    opacity: 0.9;
    width: 15%;
  }
  .not-started>.fa-circle {
    color: #c8ced3;
  }
  .accepted>.fa-circle, .accepted .fa-info-circle{
    color: #4dbd74;
  }
  .in-progress>.fa-circle {
    color: #ffc107;
  }
  .stalled>.fa-circle {
    color: #f86c6b;
  }
</style>

<div class="text-left">
    {{#if (eq record.source 'other')}}
      {{#if (eq record.submitted true)}}
      <span class="status accepted pr-1">
        <span tooltip-position="left" tooltip="Funder has receive a submission for this publication from a different source.">
          <i class="fas fa-info-circle d-inline"></i> Submitted
        </span>
      </span>
      {{else}}
        <span class="status not-started pr-1">
          <i class="fas fa-circle"></i> Manuscript expected
        </span>
      {{/if}}
    {{else}}
      <span class="status {{record.aggregatedDepositStatus}} pr-1">
        {{#if (eq status "Accepted")}}<i class="fas fa-circle"></i> {{status}}{{/if}}
        {{#if (eq status "In Progress")}}<i class="fas fa-circle"></i> {{status}}{{/if}}
        {{#if (eq status "Stalled")}}<i class="fas fa-circle"></i> {{status}} (<a href="#">?</a>){{/if}}
        {{#if (eq status "Not Started")}}
        <span tooltip-position="left" tooltip="This submission is in queue to be transmitted to target its repositories.">
          <i class="fas fa-info-circle d-inline"></i> {{status}}
        </span>
        {{/if}}
      </span>

    {{/if}}

</div>
