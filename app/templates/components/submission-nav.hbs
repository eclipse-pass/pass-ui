<div class="pb-2">
  <div class="steps">
    <button {{action "loadTab" "submissions.new.basics"}} class="step {{if (eq this.step 1) 'btn-primary'}}" disabled={{if (gt 1 this.maxStep) 'disabled'}}>
      1. Basics
    </button>
    <button {{action "loadTab" "submissions.new.grants"}} class="step {{if (eq this.step 2) 'btn-primary'}}" disabled={{if (gt 2 this.maxStep) 'disabled'}}>
      2. Grants
    </button>
    <button {{action "loadTab" "submissions.new.policies"}} class="step {{if (eq this.step 3) 'btn-primary'}}" disabled={{if (gt 3 this.maxStep) 'disabled'}}>
