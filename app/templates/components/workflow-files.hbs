{{yield}}
<style>
.table-text {
  display: inline-block;
  overflow: hidden;
  white-space: pre-wrap;
  width:200px;
}
</style>
<p>
   Attaching manuscript/article files to this submission.
</p>
    <div class="form-group row">
      <div class="col-md-12">
          <input type="file" id="file-multiple-input" multiple size="50" onchange={{action "getFiles"}}  class="text-gray-300" style="border-width:2px; cursor:pointer; border-style: dashed; padding:30px; width:100%" >
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-12">
        {{!-- <textarea id="textarea-input" name="textarea-input" rows="3" class="form-control" placeholder="Description"></textarea> --}}
      </div>
    </div>


      <div class="row">

         <div class="col-lg-12">
           <table class="table table-responsive-sm table-sm">
             <thead>
               <tr>
                 <th>File Name</th>
                 <th>Size</th>
                 <th>Discription</th>
                 <th>Action</th>
               </tr>
             </thead>
             <tbody>
              {{#each files as |file|}}
                 <tr>
                   <td><p  class="table-text" >{{file.file.name}}</p></td>
                   <td>  {{file.file.size}} bytes</td>
                   <td>
                     {{input  class="form-control" value=file.description}}
                   </td>
                   <td>
                     <button type="button" class="btn btn-danger" {{action 'removeFile' file}}>remove</button>
                   </td>
                 </tr>
                 {{/each}}
             </tbody>
           </table>
         </div>
         <!--/.col-->

       </div>
       <!--/.row-->

<p><strong>Tip:</strong> Use the Control or the Shift key to select multiple files.</p>
<button class="btn btn-outline-primary" {{action "back"}}>Back</button>
<button class="btn btn-primary pull-right" {{action "next"}}>Next</button>
