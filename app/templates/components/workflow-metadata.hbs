{{!-- takes in a schema and the model to save the schema to--}}
{{#if doiInfo}}
  <h4 class="font-weight-light pull-right" style="margin-top:6.5px;">Form {{displayFormStep}} of {{schemas.length}}</h4>
  {{metadata-form schema=schema model=model.newSubmission doiInfo=doiInfo currentFormStep=currentFormStep nextForm=(action "nextForm") previousForm=(action "previousForm")}}
{{else}}
  <h4 class="font-weight-light text-center mt-4">No form found, did you <a class="btn-link" href {{action (mut step) 0}}>enter a DOI</a>?</h4>
  <button class="btn btn-outline-primary" {{action "previousForm"}}>Back</button>
  <button class="btn btn-primary next pull-right disabled" >Next</button>
{{/if}}
{{yield}}
