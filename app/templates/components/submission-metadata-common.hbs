<hr>
<h3>Common</h3>
<p>
    Please provide additional information about your article/manuscript below:
</p>
<div class="container">
    <form>
        <div class="form-group row">
            <label for="volume" class="col-sm-3 col-md-2 col-form-label"> Volume</label>

            <div class="col-sm-9 col-md-10">
                <input type="text" id="volume" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="issue" class="col-sm-3 col-md-2 col-form-label">Issue</label>

            <div class="col-sm-9 col-md-10">
                <input type="text" id="issue" rows="4" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="publication" class="col-sm-3 col-md-2 col-form-label">Publication</label>
            <div class="col-sm-3 col-md-3 form-group">
                  <label for="date">Date</label>
                  <input type='text' placeholder="mm/dd/yyyy" class="form-control" id="pubdate"/>
            </div>
            <div class="col-sm-6 col-md-7 form-group">
                  <label for="pubtype">Publication Type</label>
                  <select class="form-control" id="pubtype">
                    <option>Electronic Publication</option>
                    <option>Print Publication</option>
                  </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="abstract" class="col-sm-3 col-md-2 col-form-label">Abstract</label>

            <div class="col-sm-9 col-md-10">
                <textarea id="abstract" rows="4" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="subjects" class="col-sm-3 col-md-2 col-form-label">Subjects (comma separated)</label>

            <div class="col-sm-9 col-md-10">
                <input type="text" id="subjects" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="final-url" class="col-sm-3 col-md-2 col-form-label">Final Article URL</label>

            <div class="col-sm-9 col-md-10">
                <input id="final-url" type="text" class="form-control" />
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <label for="author-name" class="col-sm-3 col-md-2 col-form-label">Author</label>

            <div class="col-sm form-group">
                  <label for="first">First Name</label>
                  <input id="first" type="text" class="form-control"/>
            </div>
            <div class="col-sm form-group">
                  <label for="middle">Middle Name</label>
                  <input id="middle" type="text" class="form-control"/>
            </div>
            <div class="col-sm col-md-4 form-group">
                  <label for="last">Last Name</label>
                  <input id="last" type="text" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-md-2 col-form-label"></label>

          <div class="form-group col-sm-9 col-md-10">
             <label for="orcid">ORCiD</label>
             <input type="text" class="form-control" id="orcid">
           </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-md-2 col-form-label"></label>
          <div class="form-group col-sm-9 col-md-10">
             <label for="email">Email Address</label>
             <input type="text" class="form-control" id="email">
           </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-md-2 col-form-label"></label>
          <div class="form-group col-sm-9 col-md-10">
             <label for="affiliation">Affiliation</label>
             <input type="text" class="form-control" id="affiliation">
           </div>
        </div>
        <div class="form-check row">
            <label class="col-sm-3 col-md-2 col-form-label"></label>
            <label class="form-check-label mr-3 my-2">
               <input id="corr-author" class="form-check-input" type="checkbox"> Corresponding Author
            </label>
            <button type="button" class="btn btn-secondary btn-sm float-right">Add Author</button>
        </div>
        <hr>
    </form>
</div>
{{yield}}
