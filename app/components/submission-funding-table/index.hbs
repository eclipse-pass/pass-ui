{{! template-lint-disable no-action no-invalid-interactive no-unknown-arguments-for-builtin-components }}
<table class="table" data-test-submission-funding-table>
  <thead>
    <tr>
      <th>Award Number</th>
      <th>Project name (funding period)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each @grants as |grant|}}
      <tr class="pr-0">
        <td class="awardnum-column">
          <LinkTo
            @route="grants.detail"
            @model={{grant}}
            class="text-nowrap"
            target="_blank"
          >{{grant.awardNumber}}</LinkTo>
        </td>
        <td class="projectname-date-column">{{grant.projectName}}
          ({{format-date grant.startDate}}
          -
          {{format-date grant.endDate}})</td>
        <td class="pr-0 mr-0">
          {{#if @remove}}
            <span
              class="btn btn-outline-danger pull-right"
              {{on "click" (queue (fn @remove grant) (perform @setup))}}
            >Remove</span>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>